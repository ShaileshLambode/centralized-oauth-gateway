# ============================================
# Centralized OAuth - Root Environment Config
# ============================================
# Copy this file to .env and fill in your values
# This file is used by docker-compose.yml

# ============================================
# Database
# ============================================
DB_PASSWORD=your_strong_database_password

# ============================================
# Auth Gateway Encryption
# ============================================
# Generate with: cd auth-gateway && python scripts/generate_keys.py
AUTH_GATEWAY_ENCRYPTION_KEY=your-32-character-encryption-key-here
AUTH_GATEWAY_ENCRYPTION_KEY_SALT=optional-salt-here

# ============================================
# Auth Gateway API Security
# ============================================
# Generate with: cd auth-gateway && python scripts/generate_keys.py --api-key
AUTH_GATEWAY_API_KEY=your-64-character-api-key-here

# ============================================
# Google OAuth Configuration
# ============================================
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/callback/google

# For production:
# GOOGLE_REDIRECT_URI=https://auth.yourdomain.com/auth/callback/google

# ============================================
# Environment
# ============================================
ENVIRONMENT=development
LOG_LEVEL=INFO

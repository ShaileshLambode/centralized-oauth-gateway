# ============================================
# Auth Gateway Environment Configuration
# ============================================
# Copy this file to .env and fill in your values

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=postgresql+asyncpg://postgres:YOUR_STRONG_PASSWORD@localhost:5432/auth_gateway

# For Docker Compose:
# DATABASE_URL=postgresql+asyncpg://postgres:password@db:5432/auth_gateway

# ============================================
# Encryption Configuration
# ============================================
# Generate with: python scripts/generate_keys.py

# Primary encryption key (REQUIRED)
AUTH_GATEWAY_ENCRYPTION_KEY=your-32-character-encryption-key-here

# Optional salt for additional security
# AUTH_GATEWAY_ENCRYPTION_KEY_SALT=optional-salt-here

# Rotation keys during key rotation (comma-separated)
# AUTH_GATEWAY_ROTATION_KEYS=old-key-1,old-key-2

# ============================================
# API Security
# ============================================
# Generate with: python scripts/generate_keys.py --api-key
AUTH_GATEWAY_API_KEY=your-64-character-api-key-here

# ============================================
# Google OAuth Configuration
# ============================================
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Callback URL (must match Google Cloud Console)
GOOGLE_REDIRECT_URI=https://inconclusive-jules-dextrosinistrally.ngrok-free.dev/google

# For production:
# GOOGLE_REDIRECT_URI=https://auth.yourdomain.com/auth/callback/google

# ============================================
# Server Configuration
# ============================================
HOST=0.0.0.0
PORT=8000
ENVIRONMENT=development  # development | staging | production

# ============================================
# Session Configuration
# ============================================
# OAuth session expiry (minutes)
SESSION_EXPIRY_MINUTES=15

# Refresh tokens this many seconds before expiry
TOKEN_REFRESH_BUFFER_SECONDS=300

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO  # DEBUG | INFO | WARNING | ERROR
LOG_FORMAT=json  # json | text

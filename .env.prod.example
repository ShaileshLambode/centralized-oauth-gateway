# Centralized OAuth Gateway - Production Environment Configuration
# Copy to .env and fill in all values before running docker-compose.prod.yml

# ============================================
# Database Configuration
# ============================================
DB_USER=postgres
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD

# ============================================
# Auth Gateway Security
# ============================================
# Generate with: python auth-gateway/scripts/generate_keys.py --all
AUTH_GATEWAY_ENCRYPTION_KEY=your-encryption-key-here
AUTH_GATEWAY_ENCRYPTION_KEY_SALT=your-salt-here
AUTH_GATEWAY_API_KEY=your-api-key-here

# Optional: Comma-separated old keys for key rotation
# AUTH_GATEWAY_ROTATION_KEYS=old-key-1,old-key-2

# ============================================
# Google OAuth Configuration
# ============================================
# From Google Cloud Console: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URI=https://auth.yourdomain.com/auth/callback/google

# ============================================
# Google Ads API (for GAds MCP server)
# ============================================
GOOGLE_ADS_DEVELOPER_TOKEN=your-developer-token
GOOGLE_ADS_LOGIN_CUSTOMER_ID=1234567890

# ============================================
# Production Domain Configuration
# ============================================
AUTH_DOMAIN=auth.yourdomain.com
ACME_EMAIL=admin@yourdomain.com

# ============================================
# Logging
# ============================================
LOG_LEVEL=WARNING
